<Page x:Class="RegApp.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel Width="250"
         HorizontalAlignment="Center"
         VerticalAlignment="Center">
            <TextBlock 
                Text="Логин:" FontSize="14pt"/>
            <TextBox
                Name="TxbLogin"/>
            <TextBlock 
                Text="Пароль:" FontSize="14pt"/>
            <PasswordBox
                Name="PsbPassword"
                Margin="0 0 0 10"/>
            <Button 
                Name="BtnCheck"
                Click="BtnCheck_Click"
                Content="Войти"
                FontSize="12pt"/>
            
        </StackPanel>
        <Button VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Content="Я еще не смешарик "
                Margin="10"
                Padding="10"
                Name="Btn_reg" Click="Btn_reg_Click"
                FontSize="10pt"/>
        <Button VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Content="У меня все плохо с памятью"
                FontSize="10pt"
                Margin="20"
                Padding="10"
                Name="BtnQuest"
                Click="BtnQuest_Click"/>
    </Grid>
</Page>
